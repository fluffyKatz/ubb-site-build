{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

    {{> nav}}
    {{> header}}

    <!-- start main content area -->
	<section>
		<div class="container">
			<div class="row">
				<!-- start of post container -->
				<div class="col-md-8 main-article">
					{{! Each post will be output using this markup }}
    				{{#foreach posts}}
					<article class="{{post_class}} single-post-preview">
						<!-- feature media start -->
	                    <div class="append-feature-media"></div>
	                    <!-- feature media end -->
	                    <!-- post header -->
	                    <header class="post-header">
	                        <h2 class="post-tile"><a href="{{url}}">{{{title}}}</a></h2>
	                    </header>
	                    <!-- post content -->
	                    <div class="post-content">
	                        {{! post excerpt}}
							{{content words="50"}}
	                    </div>
	                    <!-- post footer -->
	                    <footer class="post-footer clearfix">
	                        <span class="user"><i class="fa fa-user"></i>{{author}}</span><span class="date"><i class="fa fa-calendar"></i>{{date format="DD MMM YYYY"}}</span>
	                        {{#if tags}}
	                        <span class="tags"><i class="fa fa-tag"></i>{{tags separator=", "}}</span>
	                        {{/if}}
	                        <span class="comment-count pull-right"><i class="fa fa-comment"></i><a href="{{@blog.url}}{{url}}#disqus_thread">0 Comments</a></span>
	                    </footer>
	                    <div class="featured-ribbon"><i class="fa fa-bookmark"></i></div>
					</article>
					{{/foreach}}
					{{! end of post loop}}

					{{!! After all the posts, we have the previous/next pagination links }}
    				{{pagination}}
				</div>
				<!-- end of post container -->
				{{> sidebar}}
			</div>
		</div>
	</section>
	<!-- end main content area -->
	<!-- start footer -->
	{{> footer}}